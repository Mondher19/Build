name: My Gradle Workflow

on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - name: Set executable permissions on gradlew
      run: chmod +x gradlew
    - name: Setup Gradle
      uses: gradle/setup-gradle@v1
      with:
        gradle-version: 7.3.3
    - name: Build project
      run: ./gradlew build

